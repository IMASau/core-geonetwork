<overrides>
   <file name=".*WEB-INF/config\.xml">
      <replaceAtt xpath="appHandler/param[@name='maxWritesInTransaction']" attName="value" value="1"/>
      
      <!-- Service to return search summary used by portal - NOTE: must have corresponding entry in user-profiles-overrides.xml to be useable -->

      <addXML xpath="services">
			<service name="xml.search.summary">
		      <class name=".services.main.XmlSearch">
 				<param name="maxSummaryKeys" value="100" />
 				<param name="maxHitsInSummary" value="100000" />
 				<param name="resultType" value="portal_summary" />
		      </class>
			</service>
      </addXML>
   </file>
</overrides>

